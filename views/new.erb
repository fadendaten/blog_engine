<section id="article_form">
  <form action="/create" method="post">
    <input type="text" name="article[title]" placeholder="title" />
    <input type="text" name="article[author]" placeholder="author" />
    <input type="text" name="article[date]" value="<%= Date.today.to_s %>" />
    <textarea name="article[content]" placeholder="content" ></textarea>
    <input type="submit" value="Add new article" />
  </form>
</section>