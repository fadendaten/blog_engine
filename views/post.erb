<article>
  <header>
    <h2>
      <a href="<%= url(article.slug) %>"><%= article.title %></a>
    </h2>
    <p id="article-meta">
      posted
      <time class="timeago" datetime="<%= article.date.xmlschema %>">
        <%= article.date.strftime "%Y/%m/%d/" %>
      </time>
      by <%= article.author %>
    </p>
  </header>
  <section class="content">
    <%= markdown article.content %>
  </section>
</article>

<% if display_comments %>
  <section id="comments_form">
    <form action="/comment" method="post">
      <input type="text" name="comment[author]" placeholder="author" />
      <input type="hidden" name="comment[article_slug]" value="<%= article.slug %>" />
      <textarea name="comment[content]" placeholder="content" ></textarea>
      <input type="submit" value="Add comment" />
    </form>
  </section>
  <section id="comments_list">
    <ul>
      <% @comments.each do |c| %>
        <li>
          <%= c.content %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>